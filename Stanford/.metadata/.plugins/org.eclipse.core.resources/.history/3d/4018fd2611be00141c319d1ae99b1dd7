import stanford.karel.*;

public class StoneMasonKarel extends SuperKarel {
	public void run(){
		checkFirstBeeper();
		while (frontIsClear()){
			checkColumn();
			moveColumns();
		}
		//Check the last column
		checkColumn();
	}
	
private void checkColumn(){
	turnLeft();
	while (frontIsClear()) {
		setBeeper();
		move();
	}
	setBeeper();	
}

private void setBeeper(){
	if (noBeepersPresent()) {
		putBeeper();
	}
}

private void moveColumns(){
	turnRight();
	move();
	move();
	move();
	move();
	turnRight();
	move();
	move();
	move();
	move();
	turnLeft();
}


private void checkFirstBeeper(){
	setBeeper();
}

}
