import stanford.karel.*;

public class CheckerboardKarel extends SuperKarel {
	public void run(){
		turnLeft();
		while(frontIsClear()){
			fillRow();
		}
//Until you're up against the right wall
  //startFilling
    //turnRight
  //startFilling
    //turnLeft  
//FillLastRow    
	}

	private void fillRow(){
		//This method fills a row;
			move();
			putBeeper();
	}
}

